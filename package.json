{
  "name": "vitam",
  "version": "0.1.4",
  "description": "VITAM is a front-end template with Vite for static websites.",
  "author": "Kazuki Yonemoto (https://dev.to/tim_yone)",
  "scripts": {
    "checkLicense": "license-checker --production",
    "postInstall": "typesync",
    "stylelint": "stylelint 'src/**/*.{css,scss}'",
    "stylelint:fix": "stylelint 'src/**/*.{css,scss}' --fix",
    "htmlValidate": "html-validate 'dist/**/*.html'",
    "format": "prettier --write --plugin-search-dir=. 'src/**/*.{js,ts}'",
    "eslint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "eslint:fix": "eslint --fix 'src/**/*.{js,ts}'",
    "checkTypes": "tsc --noEmit",
    "lint": "npm-run-all -p eslint checkTypes stylelint htmlValidate",
    "lint:fix": "npm-run-all eslint:fix checkTypes format stylelint:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "npm-run-all build preview"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/eslint": "^8.44.2",
    "@types/jest": "^29.5.3",
    "@types/license-checker": "^25.0.3",
    "@types/micromodal": "^0.3.3",
    "@types/node": "^20.5.0",
    "@types/prettier": "^3.0.0",
    "@types/smooth-scroll": "^16.1.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "autoprefixer": "^10.4.15",
    "css-declaration-sorter": "^7.0.3",
    "eslint": "^8.47.0",
    "html-validate": "^8.2.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "license-checker": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.28",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-plugin": "^1.0.0",
    "prettier": "^3.0.2",
    "sass": "^1.65.1",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.2",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "typesync": "^0.11.1",
    "vite": "^4.4.9",
    "vite-plugin-handlebars": "^1.6.0",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-pwa": "^0.16.4",
    "vite-plugin-svg-icons": "^2.0.1"
  }
}
